{% if showPaymentInstruction %}

	<div style="margin-top:2em; margin-bottom:1.5em;">

		<div class="ifthenpay_confirm_header">
			<h2>{{ multibancoAlias }}</h2>
			<img src="catalog/view/theme/default/image/ifthenpay/multibanco.png" style=" height: 38px;" alt="Multibanco logo" title="{{ multibancoAlias }}">
		</div>

		<p>
			<b>{{ multibanco_confirm_panel_desc }}</b>
		</p>
		<div class="panel panel-default" style="padding: 2em;">
			<p>
				{{ multibanco_instruction|nl2br }}
			</p>
		</div>
	</div>

{% endif %}

<div class="buttons">
	<div class="pull-right">
		<input type="button" value="{{ button_confirm }}" id="button-confirm" data-loading-text="{{ text_loading }}" class="btn btn-primary"/>
	</div>
</div>
<link href="{{multibancoStyle}}" rel="stylesheet" type="text/css">
<script type="text/javascript" src="{{multibancoScript}}" type></script>
